<div class="modal fade" id="notificationsModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tất cả thông báo.</h4>
            </div>
            <div class="modal-body">
                <div class="mark-notifi-as-read">
                    <a href="javascript:void(0)" id="modal-notifi-mark-as-read">
                        <div class="mark-noti">
                            <strong>Đánh dấu tất cả là đã đọc</strong>
                        </div>
                    </a>
                </div>
                <ul class="list-notifications">
                    <% notifications.forEach(function(notification) { %>
                    <li>
                        <%- notification %>
                    </li>
                    <% }) %>
                </ul>
                <hr>
                <div class="read-more-notifi">
                    <a href="javascript:void(0)" id="link-read-more-notifi">
                        <strong>Xem thêm 10 thông báo</strong>
                    </a>
                    <div class="read-more-loading"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                </div>
            </div>
        </div>
    </div>
</div>